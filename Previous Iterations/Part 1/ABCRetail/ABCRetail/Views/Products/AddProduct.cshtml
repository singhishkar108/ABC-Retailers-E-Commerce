@model ABCRetail.Models.Product

@{
    ViewData["Title"] = "Add New Product";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <p class="lead mb-4">Fill out the form below to add a new product to our inventory. Make sure to provide all relevant details to ensure our customers have the best information.</p>

    <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="ProductName" class="form-label">Product Name</label>
            <input type="text" id="ProductName" name="ProductName" class="form-control" value="@Model.ProductName" required />
            <small class="form-text text-muted">Enter the name of the product. This will be displayed to customers.</small>
        </div>

        <div class="form-group mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea id="Description" name="Description" class="form-control" rows="4">@Model.Description</textarea>
            <small class="form-text text-muted">Provide a detailed description of the product. Highlight key features and benefits.</small>
        </div>

        <div class="form-group mb-3">
            <label for="Location" class="form-label">Location</label>
            <input type="text" id="Location" name="Location" class="form-control" value="@Model.Location" />
            <small class="form-text text-muted">Specify the origin or location of the product.</small>
        </div>

        <div class="form-group mb-3">
            <label for="Price" class="form-label">Price (R)</label>
            <input type="number" id="Price" name="Price" class="form-control" step="0.01" value="@Model.price" required />
            <small class="form-text text-muted">Enter the price of the product. Ensure the price is in South African Rand (R).</small>
        </div>

        <div class="form-group mb-3">
            <label for="file" class="form-label">Product Image</label>
            <p></p>
            <input type="file" id="file" name="file" class="form-control-file" />
            <small class="form-text text-muted">Upload an image of the product. This will help customers visualize the item.</small>
        </div>

        <p></p>

        <button type="submit" class="btn btn-primary">Add Product</button>
    </form>
</div>
