@{
    ViewData["Title"] = "Sign Up";
}

<div class="container mt-4">
    <h2 class="mb-3">Registration</h2>
    <p class="lead mb-4">Welcome to ABC Retail! Please fill in your details to create a new account.</p>
    <form asp-action="SignUp" method="post" class="bg-light p-4 rounded shadow-sm">
        <div class="form-group mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="Enter your email" required>
        </div>
        <div class="form-group mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" required>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
    <div class="mt-3">
        <p class="mb-0">Already have an account? <a href="@Url.Action("Login", "Users")" class="text-success-link">Login here</a></p>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var message = '@TempData["RedirectMessage"]';
            if (message) {
                toastr.warning(message);
            }
        });
    </script>
}
